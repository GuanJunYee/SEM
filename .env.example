# SEM Data Migration Demo - Environment Configuration
# Copy this file to .env and configure your settings

# === MySQL Database Configuration ===
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_USER=root
MYSQL_PASSWORD=your_password_here
MYSQL_DB=retail_db

# === MongoDB Configuration ===
MONGO_URI=mongodb://localhost:27017
MONGO_DB=retail_store
MONGO_COLLECTION=sales

# === Application Settings ===
APP_ENV=development
DEBUG=true
LOG_LEVEL=INFO

# === Data Processing Settings ===
CHUNK_SIZE=1000
MAX_RETRIES=3
TIMEOUT_SECONDS=30

# === Quality Thresholds ===
MIN_DATA_QUALITY_SCORE=85
MAX_MISSING_PERCENTAGE=10
PRICE_TOLERANCE=0.01

# === Business Rules ===
MAX_REASONABLE_PRICE=1000.00
MIN_REASONABLE_PRICE=0.01
MAX_QUANTITY_PER_TRANSACTION=100
